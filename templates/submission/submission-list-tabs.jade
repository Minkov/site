- load i18n

.page-title: .tabs
    h2 #{content_title}
    span.spacer
    ul
        li(class=('active' if tab == 'all_submissions_list' else ''))
            a(href=all_submissions_link) {% trans "All" %}
        if my_submissions_link or tab == 'my_submissions_tab'
            li(class=('active' if tab == 'my_submissions_tab' else ''))
                a(href=my_submissions_link) {% trans "Mine" %}
        if best_submissions_link
            li(class=('active' if tab == 'best_submissions_list' else ''))
                a(href=best_submissions_link) {% trans "Best" %}
        if tab == 'user_submissions_tab'
            li.active: a
                - blocktrans with username=tab_username
                    | {{ username }}'s
        if perms.judge.change_submission
            li: a(href='{% url "admin:judge_submission_changelist" %}') {% trans "Admin" %}